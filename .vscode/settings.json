        "**/*.dll": true,
        "**/*.exe": true,
        "**/*.pdf": true,
        "**/*.mid": true,
        "**/*.midi": true,
        "**/*.wav": true,
        "**/*.gif": true,
        "**/*.ico": true,
        "**/*.jpg": true,
        "**/*.jpeg": true,
        "**/*.png": true,
        "**/*.psd": true,
        "**/*.tga": true,
        "**/*.tif": true,
        "**/*.tiff": true,
        "**/*.3ds": true,
        "**/*.3DS": true,
        "**/*.fbx": true,
        "**/*.FBX": true,
        "**/*.lxo": true,
        "**/*.LXO": true,
        "**/*.ma": true,
        "**/*.MA": true,
        "**/*.obj": true,
        "**/*.OBJ": true,
        "**/*.asset": true,
        "**/*.cubemap": true,
        "**/*.flare": true,
        "**/*.mat": true,
        "**/*.prefab": true,
        "**/*.unity": true,
        "**/*.bnk": true,
        "**/*.akd": true,
        "**/*.txt": true,
        "**/*.bytes": true,
        "build/": true,
        "Build/": true,
        "Library/": true,
        "library/": true,
        "obj/": true,
        "Obj/": true,
        "ProjectSettings/": true,
        "temp/": true,
        "Temp/": true,
        "Logs/": true,
        "Packages/": true,
        "Tools/": true,
        "A+/": true,
        "xLuaBuild/": true,
        "DownloadAssets/": true,
        "**/*.csproj": true,
        "**/*.sln": true,
        "**/*.groovy": true,
        "I18N/": true,
        "_AndroidCache/":true,
        // "Assets/_3th/": true,
        "Assets/_LinkRes/": true,
        "WwiseProject_ResBuild/": true,
        "Assets/Dialogue/": true,
        "Assets/Editor/": true,
        "Assets/OasisGraph/": true,
        "Assets/PackTools/": true,
        "Assets/StreamingAssets/": true,
        "Assets/UWA/": true,
        "Assets/Wwise/": true,
        "Assets/Plugins/": true,
        "Assets/Resources/": true,
        "Assets/Game/BuildInScene": true,
        "Assets/Game/Deploy": true,
        "Assets/Game/Dialogues": true,
        "Assets/Game/EditorScene": true,
        "Assets/Game/I18N": true,
        "Assets/Game/Chapters": true,
        "Assets/Game/Lua/.vscode": true,
        "Assets/Game/Lua/.idea": true,
    },

    // Force to use the utf8 in lua files.
    "files.encoding": "utf8",

    // Force to use the windows style eol(because we work on
    // windows mostly).
    "files.eol": "\r\n",

    // Trim the trailing whitespace, to match the luacheck rule.
    "files.trimTrailingWhitespace": true,

    // Insert a final new line in lua file.
    "files.insertFinalNewline": true,

    // Force to use 4 space instead of tab.
    "editor.tabSize": 4,
    "editor.insertSpaces": true,

    // The code should not more than 80 characters in one line.
    // Althrough the modern screen is large, this rule still good
    // when you use diff tool.
    "editor.rulers": [80],

    "files.associations": {//配置语言的文件关联（在Unity里面写lua大多以.txt为文件后缀）
        "*.txt": "lua"
    },

    "editor.snippetSuggestions": "bottom",
}
